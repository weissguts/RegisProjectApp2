<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:padding="16dp">

            <TextView
                android:id="@+id/myProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:alpha="0.2"
                android:textSize="25sp"
                tools:text="Project Placeholder" />


            <EditText
                android:id="@+id/myProjectEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/myProject"
                android:textSize="25sp"
                tools:text="" />

            <TextView
                android:id="@+id/myTaskOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.2"
                android:textSize="15sp"
                tools:text="Placeholder One"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/myProjectEdit"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/myTaskOneEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text=""
                android:layout_below="@+id/myTaskOne"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/myTaskTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/myTaskOneEdit"
                android:layout_marginTop="15dp"
                android:alpha="0.2"
                android:textSize="15sp"
                tools:text="Placeholder Two" />

            <EditText
                android:id="@+id/myTaskTwoEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/myTaskTwo"
                android:textSize="15sp"
                tools:text="" />




        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
